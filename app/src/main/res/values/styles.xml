<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="loading_game_text">
        <item name="android:textColor">@color/textYellow</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="login_text">
        <item name="android:textColor">@color/textLoginbrown</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="forget_text">
        <item name="android:textColor">@color/textLoginbrown</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="login_pop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@mipmap/bg_login_pop</item>
    </style>

    <style name="btn_login">
        <item name="android:layout_width">@dimen/dp87</item>
        <item name="android:layout_height">@dimen/dp30</item>
    </style>

    <style name="roomLimit">
        <item name="android:textSize">7.5sp</item>
        <item name="android:textColor">@color/textYellow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="info_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textInfoYellow</item>
    </style>

    <style name="tableCount">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/countRed</item>
    </style>

    <style name="settingText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/settingYellow</item>
    </style>

    <style name="switchStyle">
        <item name="android:layout_width">@dimen/dp80</item>
        <item name="android:layout_height">@dimen/dp30</item>
        <item name="android:button">@drawable/switch_button</item>
    </style>

    <style name="headPostion">
        <item name="android:textColor">@color/postionYellow</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
