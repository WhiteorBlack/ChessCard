<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_home"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_notify_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp21"
            android:background="@mipmap/bg_notify"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_noitify" />

            <TextView
                android:id="@+id/txt_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp38"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fl_pre_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/premiry_room">

                <TextView
                    android:id="@+id/txt_pre_limit"
                    style="@style/roomLimit"
                    android:layout_width="@dimen/dp70"
                    android:layout_height="@dimen/dp20"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center"
                    android:text="10000金币" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_mid_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:background="@mipmap/middle_room">

                <TextView
                    android:id="@+id/txt_mid_limit"
                    style="@style/roomLimit"
                    android:layout_width="@dimen/dp70"
                    android:layout_height="@dimen/dp20"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center"
                    android:text="10000金币" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_hig_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:background="@mipmap/high_room">

                <TextView
                    android:id="@+id/txt_hig_limit"
                    style="@style/roomLimit"
                    android:layout_width="@dimen/dp70"
                    android:layout_height="@dimen/dp20"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center"
                    android:text="10000金币" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_online_count"
            style="@style/roomLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:text="当前在线人数:1000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp12"
            android:background="@mipmap/btn_start_soon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>